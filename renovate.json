{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":timezone(Asia/Tokyo)",
    ":maintainLockFilesWeekly"
  ],
  "labels": [
    "dependencies"
  ],
  "cargo": {
    "managerFilePatterns": [
      "/(^|/)Cargo\\.toml$/"
    ],
    "rangeStrategy": "bump"
  },
  "packageRules": [
    {
      "matchManagers": [
        "cargo"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "groupName": "rust dependencies",
      "automerge": false
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "pinDigests": true
    },
    {
      "groupName": "tokio monorepo",
      "matchPackageNames": [
        "/^tokio/"
      ]
    }
  ],
  "schedule": [
    "before 9am on monday"
  ]
}
